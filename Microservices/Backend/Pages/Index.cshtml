@page
@model IndexModel

@{
    ViewData["Title"] = "Home";
}


<div class="login">
    <div class="form-group row">
        <label for="userInput" class="col-2 col-form-label">User</label>
        <div class="col col-sm-6">
            <input id="userInput" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label for="passwordInput" class="col-2 col-form-label">Password</label>
        <div class="col col-sm-6">
            <input id="passwordInput" class="form-control" />
        </div>
    </div>

    <button id="login" type="button" class="btn btn-primary">Login</button>
</div>

<div class="send-message" style="display:none">
    <div id="chat-id">
        <div class="form-group row">
            <label for="chat-id" class="col-2 col-form-label">Chat</label>
            <div class="col col-sm-6">
                <input id="chatInput" class="form-control" />
            </div>
        </div>
    </div>
    <div id="current-user" class="col-2 col-form-label"></div>
    <div class="form-group row">
        <label for="message" class="col-2 col-form-label">Message</label>
        <div class="col col-sm-6">
            <input id="messageInput" class="form-control" />
        </div>
    </div>

    <button id="send" type="button" class="btn btn-primary">Send Message</button>
</div>


<hr>

<ul id="messageList"></ul>
<ul id="messageList2"></ul>
<ul id="messageList3"></ul>


@section Scripts
{
    <!-- <snippet_CDN> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <!-- </snippet_CDN> -->
    <script src="~/chat.js"></script>
}
